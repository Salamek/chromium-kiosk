pkgname=granad-kiosk
pkgver=0.1.6
pkgdesc="BESY GraNad kiosk."
pkgrel=1
arch=('any')
backup=('etc/granad-kiosk/config.yml')
license=('PROPRIETARY')
url='https://gitlab.salamek.cz/sadam/granad-kiosk'
#source=('granad-kiosk::git+ssh://git@gitlab.salamek.cz/sadam/granad-kiosk.git')
#md5sums=('SKIP')
install=granad_kiosk.install
makedepends=('python-setuptools')
depends=(
    'python'
    'python-setuptools'
    'chromium'
    'xorg-server'
    'xorg-xset'
    'xorg-xinit'
    'alsa-utils'
    'ttf-dejavu'
    'unclutter'
    'python-yaml'
    'python-docopt'
)

optdepends=(
    'xf86-video-fbturbo: Install on Raspberry PI 3 for faster rendering'
)

prepare() {
  mkdir -p "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../etc" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../granad_kiosk" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../tests" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../setup.py" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../requirements.txt" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../README.md" "${srcdir}/${pkgname}"
}


package() {
  cd "${srcdir}/${pkgname}"
  python setup.py install --root="$pkgdir/" --optimize=1
}